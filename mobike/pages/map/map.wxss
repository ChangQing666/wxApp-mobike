.map_container {
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  width:100%;
  height: 100%;
  box-sizing: border-box;
}
map{
  width:100%;
  height:100%;
}
.currentLoc{
  position:absolute;
  bottom:19rpx;
  left:19rpx;
  width:84rpx;
  height:84rpx;
  background:#ffffff;
  border-radius:50%;
  box-shadow: 0 0rpx 15rpx rgba(0,0,0,.2);
  display:flex;
  align-items: center;
  justify-content: center;
}
.currentLoc image{
  width:53%;
  height:53%;
}
.wallet{
  position:absolute;
  bottom:19rpx;
  right:19rpx;
  width:84rpx;
  height:84rpx;
  background:#ffffff;
  border-radius:50%;
  box-shadow: 0 0rpx 15rpx rgba(0,0,0,.2);
  display:flex;
  align-items: center;
  justify-content: center;
}
.wallet image{
  width:53%;
  height:53%;
}
.redPacket{
  position:absolute;
  bottom:124rpx;
  right:19rpx;
  width:84rpx;
  height:84rpx;
  background:#ffffff;
  border-radius:50%;
  box-shadow: 0 0rpx 15rpx rgba(0,0,0,.2);
  overflow:hidden;
}
.redPacket image{
  width:56rpx;
