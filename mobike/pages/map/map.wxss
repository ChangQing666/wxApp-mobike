  margin-top:24rpx;
  margin-left:14rpx;
}
.scanToOpen{
  width:250rpx;
  height:88rpx;
  border-radius:44rpx;
  background:rgba(0,0,0,.85);
  position:absolute;
  bottom:19rpx;
  left:50%;
  margin-left:-125rpx;
}
.scanToOpen image{
  width:45rpx;
  height:45rpx;
  position:absolute;
  top:50%;
  margin-top:-23rpx;
  left:36rpx;
  opacity:.8;
}
.scanToOpen text{
  color:#fff;
  font-size:30rpx;
  position:absolute;
